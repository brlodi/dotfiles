CanonicalizeHostname yes
CanonicalizeMaxDots 0
CanonicalDomains benjaminlodi.com cs.pitt.edu cssd.pitt.edu pitt.edu

Host vbox0
    # Convenience alias for first VirtualBox client on "host only network"
    Hostname 192.168.56.101

Host github.com
    IdentityFile ~/.ssh/github_rsa

Host *.pitt.edu
    User brl60
    # Disable Pubkey auth because it doesn't play well with Pitt's AFS/Kerberos
    PubkeyAuthentication no
    
# Defaults
Host *
    # macOS 10.12.2 and later do not automatically load keys or store the
    # passphrases in the keychain by default
    AddKeysToAgent yes
    UseKeychain yes
    
    User brlodi
    ForwardAgent no
    ForwardX11 no
    PubkeyAuthentication yes
    IdentityFile ~/.ssh/brlodi_rsa

